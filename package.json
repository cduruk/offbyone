{
  "name": "astro-erudite",
  "type": "module",
  "version": "1.6.3",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run lint && npm run generate-og-images && astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "new-post": "tsx scripts/new-post.ts",
    "generate-og-images": "tsx scripts/generate-og-images.ts",
    "format": "prettier --write **/*.{ts,tsx,css,astro,md} --ignore-path .gitignore",
    "format:check": "prettier --check **/*.{ts,tsx,css,astro,md} --ignore-path .gitignore",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write **/*.{ts,tsx,css,astro,md} --ignore-path .gitignore",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/markdown-remark": "^6.3.8",
    "@astrojs/mdx": "^4.3.7",
    "@astrojs/react": "^4.4.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@expressive-code/plugin-collapsible-sections": "^0.40.2",
    "@expressive-code/plugin-line-numbers": "^0.40.2",
    "@fontsource/fira-sans": "^5.2.7",
    "@fontsource/inconsolata": "^5.2.8",
    "@iconify-json/lucide": "^1.2.26",
    "@tailwindcss/vite": "^4.0.7",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "astro": "^5.14.8",
    "astro-expressive-code": "^0.40.2",
    "astro-icon": "^1.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "patch-package": "^8.0.0",
    "radix-ui": "^1.3.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "rehype-pretty-code": "^0.14.1",
    "remark-emoji": "^5.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@resvg/resvg-js": "^2.6.2",
    "@types/node": "^24.9.1",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "glob": "^11.0.3",
    "prettier": "^3.5.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "satori": "^0.18.3",
    "sharp": "^0.34.4",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss",
      "prettier-plugin-astro-organize-imports"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
