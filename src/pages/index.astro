---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { badgeVariants } from '@/components/ui/badge'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts, getFeaturedPosts, getAllTags } from '@/lib/data-utils'
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'
import logo from '../../public/static/logo.svg'

const blog = await getRecentPosts(SITE.featuredPostCount)
const featuredPosts = await getFeaturedPosts()
const allTags = await getAllTags()
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  <section class="rounded-lg border">
    <div class="flex flex-col space-y-1.5 p-6">
      <div class="flex items-center gap-2">
        <Image
          src={logo}
          alt="Off by One Logo"
          class="h-9 w-9 shrink-0 rounded-md"
        />
        <h3 class="text-3xl leading-none font-extrabold not-italic">
          Off by One
        </h3>
      </div>
    </div>
    <div class="p-6 pt-0">
      <p class="text-muted-foreground mb-2 text-[15px]">
        Hi. My name is Can Duruk. I'm the former CTO of <Link
          href="https://felt.com"
          external
          underline>Felt</Link
        > and an early engineer at <Link
          href="https://uber.com"
          external
          underline>Uber</Link
        >.
      </p>
      <p class="text-muted-foreground mb-2 text-[15px]">
        Here I write about <Link
          href="/tags/engineering-management"
          class={badgeVariants({ variant: 'muted' }) + ' inline-flex items-center gap-1 align-baseline font-semibold'}
        >
          <Icon name="lucide:hash" class="size-3" />
          engineering management
          <span class="text-muted-foreground ml-1.5">({allTags.get('engineering-management') || 0})</span></Link
        >, <Link
          href="/tags/tech-industry"
          class={badgeVariants({ variant: 'muted' }) + ' inline-flex items-center gap-1 align-baseline font-semibold'}
        >
          <Icon name="lucide:hash" class="size-3" />
          tech industry
          <span class="text-muted-foreground ml-1.5">({allTags.get('tech-industry') || 0})</span></Link
        >, and <Link
          href="/tags/social-media"
          class={badgeVariants({ variant: 'muted' }) + ' inline-flex items-center gap-1 align-baseline font-semibold'}
        >
          <Icon name="lucide:hash" class="size-3" />
          other
          <span class="text-muted-foreground ml-1.5">({allTags.get('social-media') || 0})</span></Link
        > <Link
          href="/tags/margins"
          class={badgeVariants({ variant: 'muted' }) + ' inline-flex items-center gap-1 align-baseline font-semibold'}
        >
          <Icon name="lucide:hash" class="size-3" />
          topics
          <span class="text-muted-foreground ml-1.5">({allTags.get('margins') || 0})</span></Link
        >.
      </p>
      {
        featuredPosts.length > 0 && (
          <div class="mt-4">
            <p class="text-muted-foreground mb-2 text-[15px]">Start here:</p>
            <ul class="flex flex-col gap-1 text-[15px]">
              {featuredPosts.map((post) => (
                <li>
                  <Link
                    href={`/posts/${post.id}`}
                    class="text-foreground hover:text-primary transition-colors before:content-['#_'] before:text-primary font-semibold italic"
                  >
                    {post.data.title}
                  </Link>
                </li>
              ))}
            </ul>
          </div>
        )
      }
    </div>
  </section>
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/posts"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
