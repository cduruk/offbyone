---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout class="max-w-3xl">
  <PageHead
    slot="head"
    title="Tools"
    description="Interactive tools and calculators for understanding interruptions, hiring pipelines, and productivity."
    ogImage="/static/og/tools.png"
  />
  <Breadcrumbs items={[{ label: 'Tools', icon: 'lucide:wrench' }]} />

  <section>
    <div class="prose mb-8">
      <h1>Interactive Tools</h1>
      <p>
        A collection of interactive tools and calculators to help you make
        better decisions about productivity, hiring, and team management.
      </p>
    </div>

    <ul class="flex flex-col gap-4">
      <li>
        <a href="/tools/interruptions/" class="group block">
          <div
            class="hover:bg-muted/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out"
          >
            <h3 class="group-hover:text-primary mb-1 text-lg font-medium">
              Interruptions Simulator
            </h3>
            <p class="text-muted-foreground text-sm">
              Visualize how random interruptions fragment deep work and destroy
              productivity
            </p>
          </div>
        </a>
      </li>

      <li>
        <a href="/tools/hiring-pipeline/" class="group block">
          <div
            class="hover:bg-muted/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out"
          >
            <h3 class="group-hover:text-primary mb-1 text-lg font-medium">
              Hiring Pipeline Calculator
            </h3>
            <p class="text-muted-foreground text-sm">
              Calculate how many candidates you need to reach out to make one
              hire
            </p>
          </div>
        </a>
      </li>
    </ul>
  </section>
</Layout>
